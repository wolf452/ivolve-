pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'docker.io/ahmedmaher07/ivolve'
        KUBE_NAMESPACE = 'default'  // You can customize the Kubernetes Namespace
        DEPLOYMENT_YAML = 'jenkins/lab1/jenkins/lab1/deployment.yaml'
    }
    stages {
        // Checkout code from GitHub repositories
        stage('Checkout') {
            steps {
                git url: 'https://github.com/IbrahimAdell/Lab.git', branch: 'main'
                dir('jenkins/lab1') {
                    git url: 'https://github.com/wolf8534/ivolve-.git', branch: 'main'
                }
            }
        }
        
        // Build Docker image from Dockerfile
        stage('Build Docker Image') {
            steps {
                script {
                     sh 'docker build -t docker.io/ahmedmaher07/ivolve .'  // Build Docker image
                }
            }
        }
        
        // Push Docker image to Docker Hub
        stage('Push Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'Docker_hub', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        sh 'docker login -u ${DOCKER_USERNAME} -p ${DOCKER_PASSWORD}'  // Login to Docker Hub
                        sh 'docker push ${DOCKER_IMAGE}'  // Push Docker image to Docker Hub
                    }
                }
            }
        }

        // Login to Kubernetes Cluster
        stage('Login to Kubernetes') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'k8s_token', variable: 'K8S_TOKEN')]) {
                        // Set the credentials with the Kubernetes token
                        sh 'kubectl config set-credentials jenkins --token=${K8S_TOKEN}' 

                        // Set the context (adjust the cluster name if necessary)
                        sh 'kubectl config set-context my-context --user=jenkins --cluster=kind-kind'  

                        // Use the context
                        sh 'kubectl config use-context my-context'  
                    }
                }
            }
        }

        // Deploy to Kubernetes
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'k8s_token', variable: 'K8S_TOKEN')]) {
                        // Set the credentials with the Kubernetes token and apply the deployment
                        sh '''
                            kubectl config set-credentials jenkins --token=${K8S_TOKEN}
                            kubectl apply -f ${DEPLOYMENT_YAML} -n ${KUBE_NAMESPACE} --validate=false
                        '''  // Deploy to Kubernetes
                    }
                }
            }
        }

        // Post action (e.g., notifications, additional tasks)
        stage('Post Action') {
            steps {
                script {
                    echo "Deployment to Kubernetes completed successfully!"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully."
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
