pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'docker.io/ahmedmaher07/ivolve'
        KUBE_NAMESPACE = 'default'
        DEPLOYMENT_YAML = 'deployment.yaml'
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    git url: 'https://github.com/IbrahimAdell/Lab.git', branch: 'main'
                    dir('jenkins/lab1') {
                        git url: 'https://github.com/wolf8534/ivolve-.git', branch: 'main'
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'k8s_token', variable: 'K8S_TOKEN')]) {
                        // تعيين المتغير كبيئة بدلاً من تمريره كـ flag
                        sh """
                           export KUBERNETES_TOKEN=${K8S_TOKEN}
                           kubectl apply -f $DEPLOYMENT_YAML -n $KUBE_NAMESPACE --token=${K8S_TOKEN}
                        """
                    }
                }
            }
        }

        stage('Post Action') {
            steps {
                script {
                    echo "Deployment to Kubernetes completed successfully!"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully."
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
